doctype html
head
  meta(charset="utf-8")
  script(src="http://code.angularjs.org/1.4.7/angular.min.js")
  script(type="application/javascript", src="lib/jquery.min.js")

body(ng-app="noticeApp" ng-controller="noticeCtrl")
  h1 公告更新
  div
    select(ng-model="mytype" ng-options="type.name for type in types")
    p {{ mytype }}  
  textarea(name="update", ng-model="get_server_data[mytype.value].notice_text")
  div   
    input(type="button", 
          name="update",
          value="更新",
          ng-click="click_update()",)
script(type="application/javascript", src="js/notice_update.js")
